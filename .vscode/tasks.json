{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-o",
                "../../lib/KGLGE.out",
                "-g",
                "main.cpp",
                "Window.cpp",
                "Batcher.cpp",
                "Empty.cpp",
                "GameLoop.cpp",
                "GameObject.cpp",
                "Image.cpp",
                "LevelCreator.cpp",
                "LevelLoader.cpp",
                "RedAndBlue.cpp",
                "ShaderProgram.cpp",
                "Sprite.cpp",
                "Square.cpp",
                "TextureAtlas.cpp",
                "TextRenderer.cpp",

                "-lGL",
                "-lGLU",
                "-lglfw3",
                "-lX11",
                "-lXxf86vm",
                "-lXrandr",
                "-lpthread",
                "-lXi",
                "-ldl",
                "-lXinerama",
                "-lXcursor",
                "-lGLEW"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        },
        {
            "type": "cppbuild",
            "label": "Build Files For Library",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-c",
                "-g",
                "../src/cpp/main.cpp",
                "../src/cpp/Window.cpp",
                "../src/cpp/Batcher.cpp",
                "../src/cpp/Empty.cpp",
                "../src/cpp/GameLoop.cpp",
                "../src/cpp/GameObject.cpp",
                "../src/cpp/Image.cpp",
                "../src/cpp/LevelCreator.cpp",
                "../src/cpp/LevelLoader.cpp",
                "../src/cpp/RedAndBlue.cpp",
                "../src/cpp/ShaderProgram.cpp",
                "../src/cpp/Sprite.cpp",
                "../src/cpp/Square.cpp",
                "../src/cpp/TextureAtlas.cpp",
                "../src/cpp/TextRenderer.cpp",

                "-lGL",
                "-lGLU",
                "-lglfw3",
                "-lX11",
                "-lXxf86vm",
                "-lXrandr",
                "-lpthread",
                "-lXi",
                "-ldl",
                "-lXinerama",
                "-lXcursor",
                "-lGLEW"
            ],
            "options": {
                "cwd": "${fileDirname}/../../obj"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        },
        {
            "type": "cppbuild",
            "label": "Build to Library",
            "command": "/usr/bin/ar",
            "args": [
                "rs",
                "../obj/KGLGE.a",
                "../obj/Batcher.o",
                "../obj/Empty.o",
                "../obj/GameLoop.o",
                "../obj/GameObject.o",
                "../obj/Image.o",
                "../obj/LevelCreator.o",
                "../obj/LevelLoader.o",
                "../obj/main.o",
                "../obj/RedAndBlue.o",
                "../obj/ShaderProgram.o",
                "../obj/Sprite.o",
                "../obj/Square.o",
                "../obj/TextureAtlas.o",
                "../obj/Window.o",
                "../obj/TextRenderer.o"
            ],
            "options": {
                "cwd": "${fileDirname}/../../lib"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++",
        }
    ],
    "version": "2.0.0"
}